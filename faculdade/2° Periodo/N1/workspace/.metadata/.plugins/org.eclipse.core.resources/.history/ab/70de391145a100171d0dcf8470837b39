package br.com.Lista;
import java.util.Scanner;

public class EX_30 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		Scanner in = new Scanner(System.in);
			int linhas,b, a;
			
			System.out.println("Coloque a quantidade de linas: ");
			linhas = in.nextInt();

			for (b=1; b<=linhas; b++)
			{
				for(a=1; a<=b; a++)
				{
					System.out.println ("*");
				}
				System.out.println("\n");
				
		}
//				for (b=linhas-1; b>=1; b--)
//			{
