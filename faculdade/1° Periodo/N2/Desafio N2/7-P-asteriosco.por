programa
{
	funcao inicio()
	{
		inteiro linhas,b, a
		
		escreva ("Coloque a quantidade de linas: ")
		leia(linhas)

		para (b=1; b<=linhas; b++)
		{
			para(a=1; a<=b; a++)
			{
			escreva ("*")
			}
			escreva("\n")
			
		}																																					
		
		
		
	}
}
