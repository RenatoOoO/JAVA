package br.com.jorge;

import javax.swing.JOptionPane;

public class Anoversario {

	public static void main(String[] args) {
	
		int idade = Integer.parseInt(JOptionPane.showInputDialog(null, "Bom dia Jorjão!!!\nDigite sua idade"));
		
		
		do{
			 if(idade < 40 ){
				 JOptionPane.showMessageDialog(null, "Sabemos que essa não e sua idade Veudadeira, por Favor NÃO MINTA: ");
			 }else{
				 JOptionPane.showMessageDialog(null, "PARABÉNS VOCÊ ESTÁ VELHO");
			 }
			

			}while(idade < 40);
		}

}
